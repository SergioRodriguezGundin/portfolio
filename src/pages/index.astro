---
import BlurFade from '@components/magicui/blur-fade';
import Contact from '@components/profile/Contact.astro';
import Curriculum from '@components/profile/Curriculum.astro';
import Experience from '@components/profile/Experience.astro';
import Journey from '@components/profile/Journey.astro';
import Location from '@components/profile/Location.astro';
import PersonalInformation from '@components/profile/PersonalInformation.astro';
import { Techs } from '@components/profile/Techs';
import ProjectSliders from '@components/projects/ProjectSliders.astro';
import ParticlesTheme from '@components/ui/ParticlesTheme';
import Layout from '@layouts/Layout.astro';
---

<Layout
  title="Hi! I'm Sergio. I'm a software developer from Spain."
  description='This is the mockup of the home page of my portfolio.'
>
  <ParticlesTheme client:load />
  <BlurFade className='h-full' inView client:load>
    <div class='layout mx-auto my-auto p-4 pt-16 md:pt-8 xl:p-6'>
      <div class='say-hello'>
        <PersonalInformation />
      </div>
      <div class='about-me flex flex-col gap-6 mt-6'>
        <Experience />
        <div class='flex flex-row justify-between gap-3 w-full'>
          <div class='w-full md:w-auto'>
            <Contact />
          </div>
          <div class='hidden md:flex w-full'>
            <Curriculum />
          </div>
        </div>
        <Location />
      </div>
      <div class='tech-love my-14 md:my-0'>
        <Techs containerWidth={390} />
      </div>
      <div class='my-journey mb-14 md:mb-0'>
        <Journey />
      </div>
      <div class='my-proyects flex flex-center rounded-xl'>
        <ProjectSliders />
      </div>
    </div>
  </BlurFade>
</Layout>

<style is:global>
  @keyframes reveal {
    from {
      opacity: 0;
      clip-path: inset(0% 60% 0% 50%);
      transform: translateX(-300px);
    }
    to {
      opacity: 1;
      clip-path: inset(0% 0% 0% 0%);
      transform: translateY(0);
    }
  }

  .layout {
    --grid-row-gap: 16px;
    --grid-column-width: 390px;

    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: 1fr 2.4fr;
    grid-column-gap: calc(var(--grid-row-gap) * 2);
    height: 100%;
    max-width: 1200px;
    width: 100%;
  }
  .say-hello {
    grid-area: 1 / 1 / 2 / 2;
  }
  .about-me {
    grid-area: 2 / 1 / 3 / 2;
  }
  .tech-love {
    grid-area: 1 / 2 / 2 / 3;
    width: var(--grid-column-width);
  }
  .my-journey {
    grid-area: 1 / 3 / 2 / 4;
  }
  .my-proyects {
    position: relative;
    grid-area: 2 / 2 / 3 / 4;
    width: 100%;
  }

  @media (max-width: 768px) {
    .layout {
      --grid-column-width: 350px;
      grid-template-columns: 1fr;
      grid-template-rows: repeat(5, 1fr);
      grid-column-gap: 0px;
      max-width: 100%;
      width: 100%;
      .my-proyects {
        animation: auto linear reveal both;
        animation-timeline: view();
        animation-range: entry 25% cover 50%;
      }
    }
    .say-hello {
      grid-area: 1 / 1 / 2 / 2;
      height: 290px;
    }
    .about-me {
      grid-area: 2 / 1 / 3 / 2;
    }
    .tech-love {
      grid-area: 3 / 1 / 4 / 2;
    }
    .my-journey {
      grid-area: 4 / 1 / 5 / 2;
    }
    .my-proyects {
      grid-area: 5 / 1 / 6 / 2;
      height: 100%;
    }
  }

  @media (min-width: 1800px) {
    .layout {
      grid-row-gap: var(--grid-row-gap);
    }
  }
</style>
