---
import Card from '@components/Card.astro';
import Location from '@components/profile/Location.astro';
import ProjectSliders from '@components/projects/ProjectSliders.astro';
import PersonalInformation from '@components/sections/PersonalInformation.astro';
import ThemeToggle from '@components/ThemeToggle.astro';
import ParticlesTheme from '@components/ui/ParticlesTheme';
import Layout from '@layouts/Layout.astro';
---
<Layout
  title="Hi! I'm Sergio. I'm a software developer from Spain."
  description='This is the mockup of the home page of my portfolio.'
>
  <ParticlesTheme client:load/>
  <ThemeToggle />
  <div class='layout mx-auto my-auto py-6'>
    <div class='say-hello'>
      <Card>
        <PersonalInformation />
      </Card>
    </div>
    <div class='contact flex flex-col gap-4'>
      <Card>
        <Location />
      </Card>
      <Card>
        <h1 class='text-primary'>experiencia, proyectos</h1>
      </Card>
    </div>
    <div class="curriculum flex flex-col gap-4">
      <Card>
        <h1 class='text-primary'>curriculum</h1>
      </Card>
      <Card>
        <h1 class='text-primary'>github, linkedin, etc</h1>
      </Card>
    </div>
    <div class="tech-love">
      <Card>
        <h1 class='text-primary'>tech love</h1>
      </Card>
    </div>
    <div class="my-journey">
      <Card>
        <h1 class='text-primary'>my journey</h1>
      </Card>
    </div>
    <div class='my-proyects flex flex-center'>
      <ProjectSliders />
    </div>
  </div>
</Layout>

<style>
  .layout {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(3, 1fr);
    grid-column-gap: 16px;
    grid-row-gap: 16px;
    height: 100%;
    max-width: 1200px;
    width: 100%; 
  }
  .say-hello {
    grid-area: 1 / 1 / 2 / 2;
  }
  .contact {
    grid-area: 2 / 1 / 2 / 2;
  }
  .curriculum {
    grid-area: 3 / 1 / 3 / 2;
  }
  .tech-love {
    grid-area: 1 / 2 / 1 / 3;
  }
  .my-journey {
    grid-area: 1 / 3 / 1 / 4;
  }
  .my-proyects {
    position: relative;
    grid-area: 2 / 2 / 4 / 4;
    width: 100%;
  }
</style>
