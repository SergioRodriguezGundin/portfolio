---
import Linkedin from '@components/icons/linkedin.astro';


---

<div class='contact flex flex-center gap-2'>
  <button class='button-contact'>
    <a
      class='flex flex-center gap-2'
      href='mailto:sergio.gundin.rodriguez@gmail.com'
      ><img
        src='/icons/hand.svg'
        width='20'
        height='20'
        alt='contact me'
      /><span>Say Hello!</span>
    </a>
  </button>
  <button class='button-linkedin flex'>
    <Linkedin />
  </button>
</div>

<style>
  .contact {
    padding: var(--space-4);
  }
  button {
    background: none;
    border: none;
    font: inherit;
    cursor: pointer;
    outline: inherit;
  }
  .button-linkedin {
    border: 1.5px solid var(--color-100);
    border-radius: 50%;
    padding: var(--space-3);
    margin: 0;
  }
  .button-contact {
    background: var(--global-color);
    border: 1.5px solid var(--black);
    border-radius: 24px;
    padding: var(--space-3) var(--space-4);
    margin: 0;

    a {
      text-decoration: none;
      > span {
        font-size: var(--font-size-base);
        font-weight: bold;
        color: var(--black);
      }
    }
  }
</style>
