---
import Picture from 'astro/components/Picture.astro';
import locationPicture from '@assets/images/location.webp';
import { MagicCard } from '@components/magicui/magic-card';
---

<MagicCard
  className="cursor-pointer flex-col items-center justify-center shadow-xl whitespace-nowrap w-full"
  client:load
>
<div class="relative overflow-clip flex flex-row justify-between items-center w-full">
  <div class="flex flex-col justify-start items-start gap-0 pl-4 w-100">
    <p class="text-base-700 text-sm">Based on</p>
    <h3 class="text-base-100 dark:text-base-2000 text-base">Madrid, Spain</h3>

  </div>
  <Picture
    src={locationPicture}
    formats={['webp']}
    loading="lazy"
    width={238}
    height={225}
    alt="Sergio Rodriguez Gundin based on Spain"
    class="location-image invert dark:invert-0 rounded-lg"
    />
    <span class="location-dot"></span>
  </div>
</MagicCard>

<style>
  .location-image {
    mask-image: linear-gradient(to left, hsl(var(--color-100)) 30%, rgba(0, 0, 0, .2) 90%, transparent);
  }

  .location-dot {
    position: absolute;
    top: 50%;
    right: 20%;
    transform: translate(-50%, -50%);
    width: 15px;
    height: 15px;
    border-radius: 50%;
    box-shadow: 0 0 0 0 hsl(var(--primary));
    background-color: hsl(var(--primary));
    border: 1px solid var(--color-800);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0px hsl(var(--primary));
    }
    100% {
      box-shadow: 0 0 0 20px rgba(110, 158, 139, 0.036);
    }
  }
</style>
