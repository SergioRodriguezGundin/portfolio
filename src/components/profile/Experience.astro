---
import NumberTicker from '@components/magicui/number-ticker';
---

<div class='experience-container flex flex-col flex-center gap-4 2xl:gap-0 w-full'>
  <div class='flex flex-row gap-6 px-4'>
    <div class='flex-1 flex flex-col justify-center items-start'>
      <span class="flex flex-row justify-center items-center gap-2">
        <span class='text-base-500 text-lg font-thin'>+</span>
        <span class="text-base-500 font-prompt font-bold text-2xl">0</span>
        <NumberTicker value={8} className='text-base-500 font-prompt font-bold text-2xl' client:load/>
      </span>
      <span class='text-base-600 text-sm'>Years of experience</span>
    </div>
    <div class='flex-1 flex flex-col justify-center items-start'>
      <span class='flex flex-row justify-center items-center gap-2'>
        <span class='text-base-500 text-lg font-thin'>+</span>
        <span class="text-base-500 font-prompt font-bold text-2xl">0</span>
        <NumberTicker value={9} className='text-base-500 font-prompt font-bold text-2xl' client:load/>
      </span>
      <span class='text-base-600 text-sm'>Projects worked</span>
    </div>
  </div>
  <span class="divider"></span>
</div>
