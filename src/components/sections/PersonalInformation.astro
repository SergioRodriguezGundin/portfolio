---
import GradualSpacing from '@components/magicui/gradual-spacing';
import Contact from '@components/profile/Contact.astro';
import Experience from '@components/profile/Experience.astro';
import Location from '@components/profile/Location.astro';
import ProfileImage from '@components/profile/ProfileImage.astro';
---

<div class='personal-information-card'>
  <div class='personal-information-card-contact'>
    <Contact />
  </div>
  <div class='personal-information-card-image'>
    <ProfileImage />
  </div>
  <section class='personal-information-card-content'>
    <div class='card-title'>
      <GradualSpacing
        className="font-size-base primary-color"
        text="SOFTWARE DEVELOPER"
        client:load
      />
      <GradualSpacing
        className="font-size-xxxl"
        text="Hello!"
        client:load
      />
      <GradualSpacing
        className="font-size-xxxl"
        text="I'm Sergio"
        client:load
      />
    </div>
    <div class='card-description'>
      <p>
        Welcome to my humble home on the web. I want to share with you my
        journey recap throw all the projects I've been working on.
      </p>
    </div>
    <Experience />
    <span class='divider'></span>
    <div class='personal-information-card-curriculum'>
      <Location />
    </div>
  </section>
</div>

<style>
  .personal-information-card {
    container: personal-information-card / size;
    position: relative;
    overflow: hidden;
    height: 100%;
    width: 100%;
  }
  .personal-information-card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
  }
  .card-title {
    line-height: 3.5rem;
  }
  .card-description {
    > p {
      font-size: var(--font-size-base);
      line-height: 1.6rem;
      margin-top: var(--space-4);
    }
  }
  .personal-information-card-contact {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 99;
  }

  .personal-information-card-curriculum {
    margin-top: var(--space-7);
  }

  @container personal-information-card (width <= 400px) {
    .personal-information-card-image {
      --profile-card-height: 375px;
    }
  }

  @container personal-information-card (width >= 500px) {
    .personal-information-card-image {
      --profile-card-height: 568px;
    }
  }
</style>
