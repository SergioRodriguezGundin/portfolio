---
interface CardProps {
  title: string;
}

const { title = 'title' } = Astro.props as CardProps;
---

<div class='card'>
  <h2 class='card-title text-secondary'>{title}</h2>
  <div class='card-content border-lg'>
    <slot />
  </div>
</div>

<style>
  .card {
    container: card / size;
    position: relative;
    height: 100%;
  }

  .card-content {
    padding: var(--space-9) var(--space-5) var(--space-5);
    /*background: var(--background-gradient);*/
    border: 1px solid var(--color-1000);
    clip-path: polygon(38% 0, 100% 0, 100% 100%, 0 100%, 0 45px, 30% 45px);
    height: 100%;
  }

  .card-title {
    position: absolute;
    top: 0;
    left: 0;
    padding-left: var(--space-4);
  }

  @container card (width < 400px) {
    .card-title {
      font-size: var(--font-size-base);
      top: var(--space-3);
      padding-left: var(--space-2);
    }
  }

  @container card (width > 1080px) {
    .card-content {
      clip-path: polygon(22% 0,100% 0,100% 100%,0 100%,0 45px,18% 45px)
    }
  }
</style>
