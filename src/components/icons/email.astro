---
interface EmailProps {
  size: {
    width: number;
    height: number;
  }
}

const {size = {width: 16, height: 16}} = Astro.props as EmailProps;
---

<svg xmlns="http://www.w3.org/2000/svg" width={size.width} height={size.height} viewBox="0 0 24 24"><path fill="var(--color-100)" d="m20 8l-8 5l-8-5V6l8 5l8-5m0-2H4c-1.11 0-2 .89-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2"/></svg>

<style>
  @media (width <= 768px) {
    svg {
      width: 12px;
      height: 12px;
    }
  }

  @media (768px <= width <= 1920px) {
    svg {
      width: 16px;
      height: 16px;
    }
  }

  @media (width > 1920px) {
    svg {
      width: 20px;
      height: 20px;
    }
  }
</style>