---
import type { CollectionEntry } from 'astro:content';

export interface ProjectCardProps {
  project: CollectionEntry<'projects'>;
}

const { data } = (Astro.props as ProjectCardProps).project;
const color = data.colors['bg-icon'];
---

<div class='project-card p-3 rounded-lg'>
  <h3 class={`text-${color} dark:text-${color}`}>{data.title}</h3>
  <p class='text-base-100 dark:text-base-3000'>{data.description}</p>
</div>

<style define:vars={{data}}>
  .project-card {
    width: 100%;
    height: 100%;
  }
</style>
