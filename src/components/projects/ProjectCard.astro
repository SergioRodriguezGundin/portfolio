---
import type { CollectionEntry } from 'astro:content';

export interface ProjectCardProps {
  project: CollectionEntry<'projects'>;
}

const { data } = (Astro.props as ProjectCardProps).project;
const color = data.colors['project-primary'];
---

<div class='project-card relative rounded-lg w-full h-full'>
  <div class="absolute pt-14">
    <h3 class={`text-${color} dark:text-${color}`}>{data.title}</h3>
    <p class='text-base-600'>{data.description}</p>
  </div>
</div>
