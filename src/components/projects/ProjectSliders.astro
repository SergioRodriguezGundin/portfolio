---
import { getCollection, type CollectionEntry } from 'astro:content';
import ProjectCard from './ProjectCard.astro';
import MouseWheel from '@components/icons/MouseWheel.astro';

const projects: CollectionEntry<'projects'>[] = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => a.data.sortOrder - b.data.sortOrder);

const numCards = sortedProjects.length;
---

<div data-component='carousel'>
  <ul class="markers">
    {
      sortedProjects.map((project, index) => (
        <li>
          <a href={`#carousel_${index}`}>
            <span>{project.data.title}</span>
          </a>
        </li>
      ))
    }
  </ul>
  <ul class="entries" tabindex="0">
    {
      sortedProjects.map((project, index) => (
        <li>
          <a name={`carousel_${index}`} href={`#carousel_${index}`}>
            <ProjectCard project={project} />
          </a>
        </li>
      ))
    }
  </ul>
  <div class="mouse-wheel-container">
    <MouseWheel />
  </div>
</div>

<style define:vars={{ numCards }}>
  ul, li {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  @supports (animation-timeline: view()) {
    [data-component="carousel"] {
      timeline-scope: --carousel;
      .entries {
        scroll-timeline: --carousel y;
      }
    }
  }

  [data-component='carousel'] {
    position: relative;
    display: flex;
    border-radius: 0.5em;
    overflow: hidden;
    height: 100%;
    width: 100%;

    .entries {
      display: flex;
      flex-direction: column;
      border-radius: var(--border-3);
      overflow-x: scroll;
      scroll-snap-type: y mandatory;
      scrollbar-width: none;
      scroll-behavior: smooth;
      overscroll-behavior: contain;
      width: 100%;
      height: 100%;

      li {
        scroll-snap-align: center;
        flex: 100% 1 0;
        display: flex;
        padding: var(--space-6);
        border-radius: var(--border-3);
        a {
          color: white;
          width: 100%;
        }
      }
    }

    .markers {
      display: flex;
      flex-direction: column;
      gap: var(--space-4);
      padding: var(--space-6) 0;
      width: 120px;
      a {
        animation-timeline: --carousel;
        animation-range: calc((var(--i) - 1) * 20%) calc(var(--i) * 20% + 1px);
        
      }
      li {
        &:nth-child(1) { --i: 1; }
        &:nth-child(2) { --i: 2; }
        &:nth-child(3) { --i: 3; }
        &:nth-child(4) { --i: 4; }
        &:nth-child(5) { --i: 5; }
      }
    }

    .mouse-wheel-container {
      position: absolute;
      bottom: 0;
      left: 50%;
    }
  }
</style>